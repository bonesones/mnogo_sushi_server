{
  "version": 2,
  "builds": [
    {
      "src": "/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path(.*)",
      "destination": "https://mnogo-sushi-server.vercel.app/:path*"
    },
    {
      "source": "/api/:path(.*)/",
      "destination": "https://mnogo-sushi-server.vercel.app/:path*/"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}